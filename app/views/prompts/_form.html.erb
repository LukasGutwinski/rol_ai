<%= form_for @prompt do |form| %>
    <div class="form-group">
        <%= form.label :title, "title" %>
        <%= form.text_field :title, class:"form-control"  %>
    </div>
    <div class="form-group">
        <%= form.label :content, "Content" %>
        <%= form.text_area :content, class:"form-control", rows: 20 %>
    </div>
    <div class="form-group">
        <%= form.label :model, "Model" %>
        <%= form.select :model, ["gpt-4", "gpt-3.5-turbo"], class:"form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :temperature, "Temperature" %>
        <%= form.number_field :temperature, step: 0.01, min: 0, max: 2, value: (@prompt.temperature || 1), class:"form-control" %>
    </div>

    <%= form.hidden_field :legal_content_id, value: params["legal_content_id"]  %>

    <div class="form-group flex justify-between">
        <%= form.button "Save", class: "button button-primary" %>
    </div> 
<% end %>